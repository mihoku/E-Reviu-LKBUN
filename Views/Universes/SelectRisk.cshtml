@model IEnumerable<E_Reviu_LKBUN.Models.Risk>

@{
    ViewBag.Title = "Select Risk"; 
    ViewBag.Title2 = "From RCM";
}


<div class="row">
    <div class="col-md-12">
        <div class="card shadow-0 border b-r-0">
            @*<div class="card-header card-header-info">
        <h4 class="card-title">@ViewBag.Title</h4>

        </div>*@
            <div class="card-body table-responsive">
                @if (Model.Count() == 0)
                {
                    <p>Jika data kosong artinya semua risiko sudah dipilih untuk @ViewBag.Subtitle</p>
                }
                <table class="display" id="basic-1">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reference)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Risiko)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Reference)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Risiko) <span class="badge badge-primary">@item.RiskCategory.category</span> <span class="badge badge-info">@item.Module.ModuleName</span>
                                </td>
                                <td style="white-space:nowrap">
                                    @Html.ActionLink("Select", "PickRisk", new { id = item.ID, uni = ViewBag.UniverseID }, new { @class = "btn btn-sm btn-primary" })
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
                @Html.ActionLink("Back", "Details", new { id = ViewBag.UniverseID }, new { @class = "btn btn-sm btn-primary" })
            </div>
        </div>
    </div>
</div>