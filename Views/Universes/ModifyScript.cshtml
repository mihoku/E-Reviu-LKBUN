@model E_Reviu_LKBUN.Models.UniverseRisk

@{
    ViewBag.Title = "Modify";
    ViewBag.Title2 = "Script";
}


<div class="row">
    <div class="col-md-12">
        <div class="card shadow-0 border b-r-0">
            @*<div class="card-header card-header-info">
                <h4 class="card-title">@ViewBag.Title</h4>
            </div>*@
            <div class="card-body table-responsive">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.HiddenFor(model => model.ID)
                    @Html.HiddenFor(model => model.UniverseID)
                    @Html.HiddenFor(model => model.RiskID)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Script, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Script, new { @class = "form-control", rows = 14 })
                            @Html.ValidationMessageFor(model => model.Script, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                }

                <div>
                    @Html.ActionLink("Back to RCM List", "Details",new { id=Model.UniverseID })
                </div>
            </div>
        </div>
    </div>
</div>