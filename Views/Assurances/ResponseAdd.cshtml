@model E_Reviu_LKBUN.Models.Responses

@{
    ViewBag.Title = "Buat"; 
    ViewBag.Title2 = "Tanggapan";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-0 border b-r-0">

            <div class="card-body table-responsive">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.UniverseDetailID, new { Value = ViewBag.UniverseDetailID })
                        @Html.HiddenFor(model => model.AssuranceID, new { Value = ViewBag.AssuranceID })

                        <div class="form-group">
                            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Content, new { @class = "form-control selectededitor", rows = 14 })
                                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Response", new { id = ViewBag.AssuranceID })
                </div>
            </div>
        </div>
    </div>
</div>