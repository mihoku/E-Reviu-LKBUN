                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Atribut, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Atribut, new { @class = "form-control", rows = 4 })
                                @Html.ValidationMessageFor(model => model.Atribut, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.RiskCategoryID, "RiskCategoryID", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("RiskCategoryID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RiskCategoryID, "", new { @class = "text-danger" })
