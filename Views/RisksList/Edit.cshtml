@model E_Reviu_LKBUN.Models.Risk

@{
    ViewBag.Title = "Edit";
    ViewBag.Title2 = "Risiko";
    ViewBag.Subtitle = "Kode: " + ViewBag.riskCode + " Ref: " + ViewBag.referenceCode;

}

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-0 border b-r-0">
